<% include ../partials/header %>

<div class="container">
    <h1>Edit your post</h1>
    <div class="row new-post-row">
        <form action='/posts/<%= post.id %>?_method=PUT' method='POST'>
            <div class="form-group">
                <input class="form-control" name='title'  placeholder='<%=post.title%>'>
            </div>
            <div class="form-group">
                <textarea class="form-control" name='body' rows="10" placeholder='<%=post.body%>'></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary new-post-button">Submit</button>
            </div>
            <a href="/posts">Go Back</a>
        </form>
    </div>
</div>
<% include ../partials/footer %>