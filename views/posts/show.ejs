<% include ../partials/header %>


<div class="container">
        <div class="col-md-12"> 
            <div class="thumbnail">
                <div class="caption-full caption">
                    <h4><a><%= post.title%></a></h4>
                    <p><%= post.body %></p>
                    <p>
                        <em>Submitted by: 
                        <%= post.user.username %>
                        </em>
                    </p>
                    
                    <% if(currentUser && post.user.username == currentUser){ %>
                        <a class="btn btn-warning" href="/posts/<%= post._id %>/edit">Edit</a>
                        <form class="delete-form" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/posts/<%= post._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% post.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.name %></strong>
                            <p>
                                <%= comment.body %>
                            </p>
                            <%# if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                                <a class="btn btn-xs btn-warning" 
                                    href="/posts/<%#post._id%>/comments/<%#comment._id%>/edit">Edit
                                </a>
                                <form class="delete-form" action="/posts/<%#post._id%>/comments/<%#comment._id%>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                </form>
                            <%# } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>    
</div>



<% include ../partials/footer %>